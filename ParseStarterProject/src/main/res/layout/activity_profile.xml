<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.parse.starter.StarterActivity">

    <ImageView
        android:background="@drawable/image_border"

        android:id="@+id/userIcon"
        android:src="@drawable/user_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/messageIcon"
        android:src="@drawable/message"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="320dp"/>

    <TextView
        android:id="@+id/nameText"
        android:text="@string/jon_doe"
        android:textColor="@color/dark_orange"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userIcon"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/welcome"
        android:text="@string/welcome"
        android:textSize="8sp"
        android:textStyle="normal"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/badgestTextNumber"
    android:text="@string/number"
    android:textSize="18sp"
    android:textColor="@color/textColor"
    android:layout_marginTop="250dp"
    android:layout_marginLeft="70dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/followersTextNumber"
        android:text="@string/number"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/followeingTextNumber"
        android:text="@string/number"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bio"
        android:text="@string/user_bio"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/badges"
        android:text="@string/badges"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/transparent_white"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/followers"
        android:text="@string/followers"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/transparent_white"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/following"
        android:text="@string/following"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/transparent_white"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="245dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/log_out"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:textColor="@color/textColor"
        android:background="@color/dark_orange"
        android:text="@string/LogOut"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        />

    <Button
        android:id="@+id/setting"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:textColor="@color/textColor"
        android:background="@color/dark_orange"
        android:text="@string/setting"
        android:layout_alignTop="@+id/log_out"
        android:layout_alignLeft="@+id/messageIcon"
        android:layout_alignStart="@+id/messageIcon" />

    <Button
        android:id="@+id/browse"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="browse "
        android:textSize="10dp"
        android:textColor="@color/textColor"
        android:background="@color/dark_orange"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <ListView
        android:layout_below="@+id/bio"
        android:layout_marginTop="70dp"
        android:background="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/Goals_list"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timeline"
        android:id="@+id/timeLine"
        android:layout_below="@+id/setting"
        android:layout_toRightOf="@+id/followeingTextNumber"
        android:layout_toEndOf="@+id/followeingTextNumber" />

</RelativeLayout>
